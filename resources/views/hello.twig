{% set caresynBold      = config("Caresyn.caresyn.string.bold") %}
{% set caresynItalic    = config("Caresyn.caresyn.string.italic") %}
{% set caresynName      = config("Caresyn.caresyn.name") %}


        <div class="row">
            <div class="col-lg-6 col-slg-offset-3">

            {% if caresynBold == '1' %}
                <b>Hello {{ caresynName }} bei Caresyn!</b>
            {% else %}
                Hello {{ caresynName }} bei Caresyn!
            {% endif %}

                <p>
                    <br><br>
                    Na - dann wollen wir mal was testen:
                    <ul>
                        <li>caresynBold: {{ caresynBold }}</li>
                        <li>caresynItalic: {{ caresynItalic }}</li>
                        <li>caresynName: {{ caresynName }}</li>
                    </ul>
                </p>
            </div>
        </div>



<div class="col-xs-12 col-sm-6">
    {{ LayoutContainer.show("PluginCeres::BasketPreview.BeforeCheckoutButton") }}
    <a v-resource-if:user="isLoggedIn" href="/checkout" class="btn btn-primary btn-block checkOutBtn" title="{{ trans("PluginCeres::Ceres.basketToCheckout") }}">
        {{ trans("PluginCeres::Ceres.basketToCheckout") }} <i class="fa fa-arrow-right" aria-hidden="true"></i>
    </a>
    <a v-resource-if:user="!isLoggedIn" href="/login" class="btn btn-primary btn-block checkOutBtn" title="{{ trans("PluginCeres::Ceres.basketToCheckout") }}">
        {{ trans("PluginCeres::Ceres.basketToCheckout") }} <i class="fa fa-arrow-right" aria-hidden="true"></i>
    </a>
    {{ LayoutContainer.show("PluginCeres::BasketPreview.AfterCheckoutButton") }}
</div>
